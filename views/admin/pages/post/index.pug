extends ../../layouts/default.pug 
//- include ../../mixins/filter-status.pug
//- include ../../mixins/search.pug
//- include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug 
include ../../mixins/search.pug
//- include ../../mixins/sort.pug 
//- include ../../mixins/moment.pug 

block main 
    +alert-success(5000)
    h1 Danh sách bài viết


    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row 
                .col-6 
                    +search(keyword)
                .col6 
                    //- +search(keyword)
    //- .card.mb-3 
    //-     .card-header Bộ lọc và tìm kiếm 
    //-     .card-body 
    //-         .row 
    //-             .col-4
    //-                 //- +sort

    .card.mb-3 
        .card-header Danh sách
        .card-body 
            .row
                .col-8 
                    +form-change-multi(`${prefixAdmin}/posts/change-multi?_method=PATCH`)
                .col-4 
                    a(
                        href=`${prefixAdmin}/posts/create`
                        class="btn btn-outline-success"
                    ) + Thêm Mới
            table(
                class="table table-hover table-sm"
                checkbox-multi
            ) 
                thead 
                    tr 
                        th 
                            input(type="checkbox" name= "checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Nhãn
                        th Vị trí
                        th Trạng thái 
                        th Hành động
                tbody
                    each post, index in posts
                        tr 
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value=1
                                )
                            td  #{index+1}
                            td 
                                img(
                                    src= post.thumbnail
                                    width="100px"
                                    height="auto"
                                )
                            td  #{post.title}
                            td  
                                each hashtag in post.infoHashtags
                                    a(
                                        class="badge badge-info"
                                    ) #{hashtag}
                            td 
                                input(
                                    type="number"
                                    value= post.position
                                    style= "width: 60px"
                                    min="1"
                                    name="position"
                                    )
                            td
                                if(post.status == "posted")
                                    a(
                                        href="javascript:;" 
                                        data-status= "posted"
                                        data-id= post.id
                                        button-change-status
                                        class="badge badge-success"
                                        ) Đã đăng
                                else 
                                    a(
                                        href="javascript:;" 
                                        data-status= "draft"
                                        data-id= post.id
                                        button-change-status
                                        class="badge badge-secondary"
                                        ) Nháp
                            td 
                                a(  
                                    href=`${prefixAdmin}/posts/detail/${post.id}`
                                    class="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                a(  
                                    href=`${prefixAdmin}/posts/edit/${post.id}`
                                    class="btn btn-warning btn-sm"
                                    ) Sửa
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    data-id= post.id
                                    button-delete-item
                                    ) Xóa


    //- +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/posts/change-status`
    ) 
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/posts/delete`
    ) 

    script(src="/admin/js/post.js") 

